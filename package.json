{
  "name": "webguard",
  "description": "一个轻量级的前端监控系统，帮助你实时监控和诊断 Web 应用的问题。",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev:core": "pnpm --filter core run dev",
    "start:coreserver": "pnpm --filter core run server",
    "prepare": "husky",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --ignore-pattern \"packages/**/dist\" --ignore-pattern \"packages/**/node_modules\"",
    "lint-fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix --ignore-pattern \"packages/**/dist\" --ignore-pattern \"packages/**//node_modules\"",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --runInBand --coverage",
    "publish": "pnpm lerna run build && pnpm lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gamejoye/webguard.git"
  },
  "keywords": [
    "web guard",
    "web monitor",
    "web error",
    "web performance",
    "web error monitor",
    "web performance monitor"
  ],
  "author": "gamejoye <gamejoye@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-typescript": "^7.25.7",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.6",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "rollup": "^4.24.0",
    "rollup-plugin-delete": "^2.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
